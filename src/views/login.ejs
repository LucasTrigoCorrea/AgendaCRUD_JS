<%- include('includes/head'); %>
<%- include('includes/nav'); %>


<div class="container">
  <div class="row">
    <div class="col-lg-2">
      
    </div>
    <div class="col-lg-8 my-5">
      <h1 class="text-center">Criar conta ou acessar o sistema</h1>
      <p class="text-center lead">Crie sua conta ou faça login </p>

      <%- include('includes/messages') %> 

      <div class="row">
        <div class="col-lg my-5">
          <h4>Cadastrar Usuário</h4>
          <p>Se você ainda não tem uma conta, faça seu cadastro</p>
          <form class="form-cadastro" action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group my-1">
              <label>Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group my-1">
              <label>Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark my-3">Criar conta</button>
          </form>

        </div>
        <div class="col-lg my-5">
          <h4>Entrar no Sistema</h4>
          <p>Faça seu login para acessar o sistema</p>
          
          <form class="form-login" action="/login/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group my-1">
              <label>Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group my-1">
              <label>Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark my-3">Entrar</button>
          </form>
        </div>
      </div>


      
    </div>
    <div class="col-lg-2">

    </div>
  </div>
</div>


  <%- include('includes/footer'); %>